
<div class="row">
  <div class="col-md-6">    
    <ul>
      <h2>Burgers ready to be eaten!</h2>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>

    <br>
  </div>

  <div class="col-md-6">
    <ul>
      <h2>Burgers devoured. Yum!</h2>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <center>
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bn"><h4>Burger Name:</h4></label>
          <input type="text" id="bn" name="burger_name">
        </div>

      <!-- Uncomment to allow burgers to be added with devoured=true (value=1)
        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured<br>
          <input type="radio" name="devoured" value="0"> Not Eaten<br>
        </div>
      -->

        <button type="submit" class="btn btn-danger">Add Burger</button>
      </form>
    </center>
  </div>
</div>
